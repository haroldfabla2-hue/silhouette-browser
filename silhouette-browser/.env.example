# =============================================================================
# SILHOUETTE BROWSER - CONFIGURACIÓN DE PRODUCCIÓN
# Copiar este archivo como .env y configurar con valores reales
# =============================================================================

# Google OAuth 2.0 Credentials
GOOGLE_CLIENT_ID=tu_client_id_aqui.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=tu_client_secret_aqui
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/callback

# URLs de callback para diferentes entornos
GOOGLE_REDIRECT_URI_PROD=https://tu-dominio.com/auth/callback
GOOGLE_REDIRECT_URI_DEV=http://localhost:3000/auth/callback

# Configuración de JWT
JWT_SECRET=tu_jwt_secret_super_seguro_aqui_minimo_32_caracteres
JWT_EXPIRES_IN=24h

# Configuración de sesión
SESSION_SECRET=tu_session_secret_super_seguro_aqui
SESSION_TIMEOUT=24h

# Configuración de base de datos (si usas DB externa)
DB_URL=mongodb://localhost:27017/silhouette-users
DB_HOST=localhost
DB_PORT=27017
DB_NAME=silhouette_browser
DB_USER=tu_usuario_db
DB_PASSWORD=tu_password_db

# Configuración de seguridad
ENCRYPTION_KEY=tu_clave_de_encriptacion_32_caracteres_aqui
ENABLE_TWO_FACTOR=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=900000

# Configuración de notificaciones
ENABLE_EMAIL_NOTIFICATIONS=true
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_app_password

# Configuración de auditoría
ENABLE_AUDIT_LOG=true
AUDIT_LOG_RETENTION_DAYS=365

# Configuración de desarrollo
NODE_ENV=production
ENABLE_DEBUG_MODE=false
ENABLE_PERFORMANCE_MONITORING=true

# URLs de la aplicación
APP_URL=https://tu-dominio.com
API_BASE_URL=https://api.tu-dominio.com
FRONTEND_URL=https://tu-dominio.com

# Configuración de GitHub (si usas integración)
GITHUB_CLIENT_ID=tu_github_client_id
GITHUB_CLIENT_SECRET=tu_github_client_secret